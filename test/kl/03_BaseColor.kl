require RazerHydra;

operator entry() {
  RazerHydraController controller();
  UInt8 red, green, blue;

  controller.setBaseColor(255, 0, 0);
  controller.getBaseColor(red, green, blue);
  report('red '+red+', green '+green+', blue '+blue);

  controller.setBaseColor(0, 255, 0);
  controller.getBaseColor(red, green, blue);
  report('red '+red+', green '+green+', blue '+blue);

  controller.setBaseColor(0, 0, 255);
  controller.getBaseColor(red, green, blue);
  report('red '+red+', green '+green+', blue '+blue);
}